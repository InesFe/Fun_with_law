<h1>Vous souhaitez modifier, compléter une décision?</h1>

<ul>
    <%if @decision.errors.any? %>
        <h2>Erreur, décision non sauvegardée pour les rasions suivantes :</h2>
        <% @decision.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    <% end %>
</ul>  

<%= form_with model: @decision do |form| %>
  
  <div>
    <%= form.label :chapter, style: "display: block" %>
    <%= form.text_field :chapter %>
  </div>
  
  <div>
    <%= form.label :name, style: "display: block"  %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :date, style: "display: block"  %>
    <%= form.number_field :date %>
  </div>

  <div>
    <%= form.label :summary, style: "display: block" %>
    <%= form.text_area :summary %>
  </div>

  <div>
    <button>
    <%= form.submit %>
    </button>
  </div>
<% end %>