<div class="degrade-horizontal min-h-screen flex flex-col items-center justify-center p-6 space-y-6">

  <% if @decision.errors.any? %>
    <div class="bg-pink-200 border border-pink-600 text-pink-800 px-4 py-3 rounded w-full max-w-xl">
      <h2 class="font-bold mb-2">Erreur — décision non sauvegardée :</h2>
      <ul class="list-disc list-inside">
        <% @decision.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-gray-100 card-border rounded-xl shadow-2xl p-8 w-full max-w-xl transform hover:scale-105 transition duration-300 ease-in-out">
    <%= form_with model: @decision, class: "space-y-4" do |form| %>

      <div>
        <%= form.label :chapter, "Chapitre", class: "block text-gray-700 font-semibold mb-1" %>
        <%= form.text_field :chapter, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-surfgreen" %>
      </div>

      <div>
        <%= form.label :name, "Nom de la décision", class: "block text-gray-700 font-semibold mb-1" %>
        <%= form.text_field :name, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-surfgreen" %>
      </div>

      <div>
        <%= form.label :date, "Année", class: "block text-gray-700 font-semibold mb-1" %>
        <%= form.number_field :date, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-surfgreen" %>
      </div>

      <div>
        <%= form.label :summary, "Apport", class: "block text-gray-700 font-semibold mb-1" %>
        <%= form.text_area :summary, rows: 4, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-surfgreen" %>
      </div>

      <div class="flex justify-center pt-4">
        <%= form.submit "Sauvegarder", class: "bg-surfgreen helvetica-text text-black font-semibold py-2 px-6 rounded-2xl hover:bg-darksurfgreen transition" %>
      </div>
    <% end %>
  </div>

  <%= link_to "↩︎ Liste des décisions", decisions_path, class: "mt-4 underline text-black hover:text-gray-700 helvetica-text" %>
</div>
