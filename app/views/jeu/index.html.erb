<div class="degrade-horizontal min-h-screen flex items-center justify-center p-6">
  <div class="relative bg-gray-800 text-white max-w-lg w-full rounded-2xl shadow-2xl border-4 border-gray-600 overflow-hidden">
    
    <!-- Card Header -->
    <div class="bg-gradient-to-r from-gray-700 to-gray-900 text-center py-4">
      <h2 class="helvetica-text text-3xl bold"><%= @current_question[:question] %></h2>
    </div>
    
    <!-- Card Body -->
    <div class="p-6">
      <% if @questions.present? %>
        <%= form_tag jeu_submit_path, method: :post, local: true, data: { turbo: false }, class: "space-y-6" do |form| %>
          
          <div class="flex flex-col items-center space-y-4">
            <% @current_question[:options].each_with_index do |option, index| %>
              <div class="w-full">
                <%= radio_button_tag "question[answer_id]", option[1], false, id: "option_#{index}", class: "hidden peer" %>
                <label for="option_#{index}" class="block cursor-pointer px-6 py-3 text-center bg-gray-700 border border-gray-500 rounded-lg shadow-lg transition duration-300 ease-in-out peer-checked:bg-blue-500 peer-checked:text-white hover:bg-gray-600">
                  <%= option[0] %>
                </label>
              </div>
            <% end %>
          </div>

          <!-- Validation Button -->
          <div class="mt-6">
            <%= submit_tag "VALIDER", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg shadow-lg transition duration-300 ease-in-out" %>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Card Footer -->
    <div class="flex justify-between bg-gray-700 px-6 py-4 border-t border-gray-600">
      <%= link_to "Page Home", root_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg shadow-md transition duration-300 ease-in-out" %>
      <%= link_to "Question suivante", jeu_index_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg shadow-md transition duration-300 ease-in-out" %>
    </div>
  </div>
</div>
