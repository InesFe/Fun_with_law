<div class="space-y-4 text-center">
  <h1 class="text-xl font-bold helvetica-text">Choisissez un chapitre pour jouer</h1>

  <% Decision.distinct.pluck(:chapter).each do |chapter| %>
    <%= link_to chapter, jeu_index_path(chapter: chapter), class: "bg-surfgreen helvetica-text text-black font-serif py-2 px-4 rounded-lg hover:bg-indigo-700 inline-block" %>
  <% end %>

  <div class="mt-4">
    <%= link_to "Tous les chapitres", jeu_index_path, class: "bg-surfgreen text-black font-serif py-2 px-4 rounded-lg hover:bg-indigo-700 inline-block" %>
    <%= link_to "Home", root_path, class: "bg-surfgreen text-black font-serif py-2 px-4 rounded-lg hover:bg-indigo-700 inline-block" %>
  </div>
</div>
